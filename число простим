def is_prime(n):
    if n <= 1:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True

# Приклад використання
number = 29
if is_prime(number):
    print(f"{number} є простим числом.")
else:
    print(f"{number} не є простим числом.")
